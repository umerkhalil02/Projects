        <activity
            android:name=".LoginActivity"
            android:exported="false" />
        <activity
            android:name=".UpdateTimeActivity"
            android:exported="false" />
        <activity
            android:name=".UpdateActivity"
            android:exported="false" />
        <activity
            android:name=".AddActivity"
